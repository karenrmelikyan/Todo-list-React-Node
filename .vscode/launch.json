    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}\\server",
            // "program": "${workspaceFolder}\\server\\index.js",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "start"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Client",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}\\client",
            // "program": "${workspaceFolder}\\client\\index.js",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "build"
            ]
        }
    ]
}